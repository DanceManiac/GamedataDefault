[logic]
active = walker
combat_ignore = combat_ignore
on_death = death
weapon_manager = kat_sniper

[death]
on_info = %=dec_counter(hospital_z3_cout)%

[walker]
on_info = camper@hide %=inc_counter(hospital_z3_cout)%
combat_ignore_cond = true
path_walk = z3_sniper_1_hide_walk
path_look = z3_sniper_look

[camper@hide]
;out_restr = z3_sniper_1_2_restr
combat_ignore_cond = always
path_walk = z3_sniper_1_hide_walk
path_look = z3_sniper_look
radius = 1
on_info = {+hospital_z3_fierce_attack} camper@fire

[camper@fire]
post_combat_time = 0,0
out_restr = z3_sniper_1_2_restr
path_walk = z3_sniper_1_fire_walk
path_look = z3_sniper_look
radius = 1
def_state_moving = sneak_run
;def_state_campering_fire = hide_sniper_fire
wounded = wounded

[wounded]
hp_state        = 0|wounded_heavy@help_heavy
hp_state_see    = 0|wounded_heavy@help_heavy
hp_victim       = 0|nil
hp_fight        = 0|false
hp_cover        = 0|false
