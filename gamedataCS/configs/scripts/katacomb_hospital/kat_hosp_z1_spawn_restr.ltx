[logic]
active = sr_idle

[sr_idle]
on_info = {+hospital_first_wave_spawn} sr_idle@spawn1

[sr_idle@spawn1]
on_info = {-hospital_z1_enemy_1} sr_idle@spawn2 %+hospital_z1_enemy_1 =inc_counter(hospital_z1_cout) =spawn_object(kat_hosp_z1_enemy_floor2r_1:spawn_way_1)%, sr_idle@spawn2

