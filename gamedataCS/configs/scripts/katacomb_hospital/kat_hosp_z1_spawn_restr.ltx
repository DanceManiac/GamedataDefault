[sr_idle@third_wave_spawn_3]
on_info = {-hospital_z1_enemy_3} sr_idle@third_wave_wait %+hospital_z1_enemy_3 =inc_counter(hospital_z1_cout) =spawn_object(kat_hosp_z1_enemy_floor2r_3:spawn_way_3)%, sr_idle@third_wave_wait

