on_info = {-hospital_z1_enemy_1} sr_idle@third_wave_spawn_2 %+hospital_z1_enemy_1 =inc_counter(hospital_z1_cout) =spawn_object(kat_hosp_z1_enemy_floor2r_1:spawn_way_1)%, sr_idle@third_wave_spawn_2

