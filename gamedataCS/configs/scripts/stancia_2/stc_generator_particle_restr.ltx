[logic]
active = sr_idle@wait

[sr_idle@wait]
on_info = {+freeplay} sr_idle@wait_play

[sr_idle@wait_play]
on_info = sr_idle@wait_out %=play_sound(stc_generator_sound) =play_particle_on_path(anomaly2\generatory:stc_generator_particle_way_1)%

[sr_idle@wait_out]
on_game_timer = 1 | sr_idle@wait_out_play
on_game_timer2 = 3 | sr_idle@wait

[sr_idle@wait_out_play]
on_info = sr_idle@wait_out %=play_sound(stc_generator_sound) =play_particle_on_path(anomaly2\generatory:stc_generator_particle_way_1)%
