on_info = sr_idle@line_2_1

[sr_idle@line_2_1]
on_actor_dist_ge_nvis = 100 | {!smart_captured_by_faction(mil_smart_terrain_3_8:monolith) !smart_captured_by_faction(mil_smart_terrain_3_8:monster) =smart_squad_population(monolith:mil_smart_terrain_2_10:1)} sr_idle@line_3 %=create_squad(mil_monolith_squad:mil_smart_terrain_2_10) +mil_barrier_spawn_monolith%

[sr_idle@line_2_2]
on_actor_dist_ge_nvis = 100 | {!smart_captured_by_faction(mil_smart_terrain_3_8:monolith) !smart_captured_by_faction(mil_smart_terrain_3_8:monster) =smart_squad_population(monster:mil_smart_terrain_2_10:1)} sr_idle@line_3 %=create_squad(mil_monster_squad:mil_smart_terrain_2_10) +mil_barrier_spawn_monster%

[sr_idle@line_3]
on_info = {!squad_exist(mil_monolith_squad) +mil_barrier_spawn_monolith} sr_idle@line_1
on_info2 = {!squad_exist(mil_monster_squad) +mil_barrier_spawn_monster} sr_idle@line_1


