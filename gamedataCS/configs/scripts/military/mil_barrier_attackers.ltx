;active = sr_idle@line_0
active = nil

[sr_idle@line_0]
on_game_timer = 100 | sr_idle@line_2

[sr_idle@line_1]
on_game_timer = 1200 | sr_idle@line_2 %-mil_barrier_spawn_monolith -mil_barrier_spawn_monster%

