[sr_idle@scene_2_sit]
on_timer = 14000 | sr_idle@scene_2_talk
on_info = {+mar_lvl_sim} sr_idle@test

[sr_idle@scene_2_talk]
on_info = {+mar_lvl_sim} sr_idle@test, {+mar_intro_scene_2_end} sr_idle@scene_2_end %=transfer_all_to_box(316)%

[sr_idle@scene_2_end]
on_info = {+mar_lvl_sim} sr_idle@test, {+mar_intro_scene_2_cameff_end} sr_idle@scene_3_barman_wait_0 %=enable_ui =give_inited_task(storyline:mar_story_talk_with_barman:csky)%
