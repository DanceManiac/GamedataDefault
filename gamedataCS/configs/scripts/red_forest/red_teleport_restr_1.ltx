[logic]
active = sr_idle

[sr_idle]
on_info = {+red_teleport_way_2 =distance_to_obj_le(522:30)} sr_particle@red_teleport_particle %=play_sound(red_teleport_work)%

[sr_particle@red_teleport_particle]
name = anomaly2\anomaly_teleport
path = red_teleport_particle_point
mode = 2
looped = false 
on_actor_inside = sr_idle@teleport %+red_actor_find_teleport%

[sr_idle@teleport]
on_info = %=disable_ui =run_postprocess(red_teleport) +teleport_info%
on_game_timer = 6 | sr_idle@effector %=teleport_actor(red_teleport_restr_1_walk:red_teleport_restr_1_look)%

[sr_idle@effector]
on_game_timer = 10 | sr_idle %=enable_ui%