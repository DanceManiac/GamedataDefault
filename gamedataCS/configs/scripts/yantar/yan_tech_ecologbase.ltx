[logic]
active = walker
relation = friend
sympathy = 1
on_death = death
level_spot = mechanic
enable_torch = false

[walker]
path_walk = yan_walker_tech_ecologbase_walk
path_look = yan_walker_tech_ecologbase_look
out_restr = yan_space_restrictor_no_weapon_actor_base_cut2
combat_ignore_cond = {!is_enemy_actor}
on_info = {+agr_take_reward_complete} walker@talk
wounded = wounded
meet = no_meet

[walker@talk]
path_walk = yan_walker_tech_ecologbase_walk
path_look = yan_walker_tech_ecologbase_look
out_restr = yan_space_restrictor_no_weapon_actor_base_cut2
combat_ignore_cond = {!is_enemy_actor}
on_actor_dist_le_nvis = 2 | {-yan_tech_ecologbase_meet_info =see_actor !is_faction_enemy_to_actor(ecolog)} %=play_sound(yan_tech_ecologbase_meet) +yan_tech_ecologbase_meet_info%
on_actor_dist_ge_nvis = 9 | {+yan_tech_ecologbase_meet_info !is_faction_enemy_to_actor(ecolog)} %=play_sound(yan_tech_ecologbase_meet_bye) -yan_tech_ecologbase_meet_info%
wounded = wounded
meet = meet

[meet]
meet_state = 2|wait
meet_state_wpn = 2|wait
victim = 2|actor
victim_wpn = 2|actor
use = true
use_wpn = true
abuse = false

[death]
on_info = %+yan_tech_ecologbase_dead =set_faction_community_to_actor(ecolog:enemy) =set_faction_community_to_actor(stalker:enemy)%

[wounded]
hp_state        = 0|wounded_heavy@help_heavy
hp_state_see    = 0|wounded_heavy@help_heavy
hp_victim       = 0|nil
hp_fight        = 0|false
hp_cover        = 0|false
