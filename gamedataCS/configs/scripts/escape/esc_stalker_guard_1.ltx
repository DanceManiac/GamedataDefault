[logic]
active = walker
on_death = death
enable_torch = false

[walker]
path_walk = esc_stalker_guard_1a_walk
path_look = esc_stalker_guard_1a_look
combat_ignore_cond = {!is_enemy_actor}
on_actor_dist_le_nvis = 1 | {-esc_stalker_guard_1_meet_info} walker@1
on_info = {+esc_stalker_guard_1_meet_info} walker@2
on_info2 = {+esc_guard_hello_1_info} walker@3
meet = no_meet

[walker@1]
path_walk = esc_stalker_guard_1b_walk
path_look = esc_stalker_guard_1b_look
combat_ignore_cond = {!is_enemy_actor}
on_info = {+esc_bring_habar_complete} walker@2
on_info2 = {+esc_guard_hello_1_info} walker@3
meet = no_meet

[walker@2]
path_walk = esc_stalker_guard_1b_walk
path_look = esc_stalker_guard_1b_look
combat_ignore_cond = {!is_enemy_actor}
on_actor_dist_le_nvis = 2 | {-esc_stalker_guard_1_meet_info} %=play_sound(esc_stalker_guard_1_call:stalker:esc_stalker_guard_1_name) +esc_stalker_guard_1_meet_info%
on_info = {+esc_guard_hello_1_info} walker@3
on_info2 = {+gar_story_got_info_from_digger} %=destroy_object%
meet = meet

[walker@3]
path_walk = esc_stalker_guard_1b_walk
path_look = esc_stalker_guard_1b_look
combat_ignore_cond = {!is_enemy_actor}
on_info = {+gar_story_got_info_from_digger} %=destroy_object%
meet = no_meet

[meet]
meet_state = 2|guard@nil
meet_state_wpn = 2|guard@nil
victim = 2|actor
victim_wpn = 2|actor
meet_dialog = guard_hello_1
use = true
use_wpn = true
trade_enable = false

[death]
on_info = %+esc_stalker_guard_1_dead%