[logic]
active = sr_idle@7

[sr_idle@7]
on_info = {=actor_in_zone(esc_stalkers_dialog_zone_3) +esc_bring_habar_complete -esc_leader_stalkerbase_dead -start_surge_info} sr_idle@8s %=play_sound(esc_stalker_assemble_3_1:stalker_2:esc_stalker_assemble_3_name) =puzo_squad_spawn_timer_start%

[sr_idle@8s]
on_signal = sound_end | sr_idle@8 %+esc_pda_dialog_3_started%

[sr_idle@8]
on_info = {+esc_pda_dialog_3_continues_1} sr_idle@9

[sr_idle@9]
on_game_timer = 10 | sr_idle@10 %=play_sound(esc_stalker_assemble_3_3:stalker_2:esc_stalker_assemble_3_name)%

[sr_idle@10]
on_signal = sound_end | sr_idle@10a %+esc_pda_dialog_3_continues_2%

[sr_idle@10a]
on_info = {+esc_puzo_squad_spawn} sr_idle@11 %=create_squad(esc_puzo_squad:esc_smart_terrain_5_7)%

[sr_idle@11]
