[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_info = {+mar_story_go_to_escape_done +esc_stalker_assemble_4_3_sound_info} ph_door@close %=play_sound(trader_door_unlock)%

[ph_door@close]
locked = true
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
;on_use = ph_door@open
on_actor_in_zone = esc_space_restrictor_trader_door_into | ph_door@near

[ph_door@near]
locked = false
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open

[ph_door@open]
locked = false
closed = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@near
on_actor_not_in_zone = esc_space_restrictor_trader_door_into | ph_door@close