[logic]
active = sr_idle

[sr_idle]
on_actor_inside = %=hit_actor(0.5)% sr_idle@pause
on_info = {+lim_electro_fence_off} sr_idle@cs_talk

[sr_idle@pause]
on_timer = 250 | sr_idle
on_info = {+lim_electro_fence_off} sr_idle@cs_talk

[sr_idle@cs_talk]
on_game_timer = 50 | sr_idle@cs_leader_task %=play_sound(lim_cs_reconnaissance_squad_electricity_off_pda:csky:st_ui_pda_legend_squad)%

[sr_idle@cs_leader_task]
on_signal = sound_end | sr_idle@nil %=play_sound(lim_cs_leader_next_task:csky:mar_csky_commander_name)%

[sr_idle@nil]