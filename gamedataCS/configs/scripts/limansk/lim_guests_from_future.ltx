[logic]
active = ph_idle@wait

[ph_idle@wait]
;locked = false
;closed = true
;no_force = true
on_info = {=actor_in_zone(lim_door_restr)} ph_door@close

[ph_door@locked]
locked = true
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
hit_on_bone = 1|ph_door@free|2|ph_door@free|3|ph_door@free

[ph_door@close]
locked = false
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open
hit_on_bone = 3|ph_door@free

[ph_door@open]
locked = false
closed = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@close
hit_on_bone = 2|ph_door@free


[ph_door@free]
locked = false
closed = true
no_force = true
on_use = ph_door@open