[logic]
active = ph_button@init

[ph_button@init]
anim = idle
on_info = {+lim_electro_fence_sniper_kill +lim_final_sniper_off} ph_button@deactivate_pre
nonscript_usable = false 
tooltip = tips_tranformer_locked

[ph_button@deactivate_pre]
anim = idle
on_press = ph_button@deactivate_pre_1
tooltip = tips_tranformer_off

[ph_button@deactivate_pre_1]
anim = idle
on_game_timer = 5 | ph_button@deactivate %=play_sound(lim_electro_fience_swither)%
tooltip = tips_tranformer_off

[ph_button@deactivate]
anim = off
on_game_timer = 10 | ph_idle@nil %+lim_electro_fence_off =enable_level_changer(620)%
tooltip = tips_tranformer_off

[ph_idle@nil]