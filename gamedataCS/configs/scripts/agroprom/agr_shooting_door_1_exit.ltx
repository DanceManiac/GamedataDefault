[logic]
active = ph_door@close

[ph_door@close]
locked = false
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {=actor_dist_to_zone_le(agr_no_wpn_zone_master:1)} ph_door@close
on_use = ph_door@open

[ph_door@open]
locked = false
closed = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {=actor_dist_to_zone_ge(agr_no_wpn_zone_master:2)} ph_door@close
on_use = ph_door@close