[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {=actor_in_zone(agr_duty_weaponmaster_zone) -agr_store_inventory_box} ph_door@close

[ph_door@open]
locked = false
closed = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {!actor_in_zone(agr_duty_weaponmaster_zone)} ph_door@locked
on_use = ph_door@close

[ph_door@close]
locked = false
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {!actor_in_zone(agr_duty_weaponmaster_zone)} ph_door@locked
on_use = ph_door@open