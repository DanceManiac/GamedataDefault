[logic]
active = walker@prewait
on_death = death
level_spot = quest_npc

[walker@prewait]
path_walk = agr_duty_hourman_walk_1
path_look = agr_duty_hourman_look_1
combat_ignore_cond = {!is_enemy_actor}
on_info = {+agr_hourman_dialog_info} walker@wait
meet = meet@no_break

[walker@wait]
path_walk = agr_duty_hourman_walk_1
path_look = agr_duty_hourman_look_1
combat_ignore_cond = {!is_enemy_actor}
on_info = {+agr_actor_inside_5 !actor_see_npc} walker@walk
meet = meet

[walker@walk]
path_walk = agr_duty_hourman_walk_2
path_look = agr_duty_hourman_look_2
combat_ignore_cond = {!is_enemy_actor}
def_state_moving = run
meet = meet

[meet@no_break]
meet_state = 30|hello_wpn|5|guard@nil 
meet_state_wpn = 30|hello_wpn|5|threat@nil
victim = 30| actor
victim_wpn = 30| actor
meet_dialog = agr_hourman_dialog
allow_break = false
trade_enable = false
use	= true
use_wpn	= true

[meet]
meet_state = 3| guard@meet_comander_wait 
meet_state_wpn = 3| threat@meet_weapon_wait
victim = 3| actor
victim_wpn = 3| actor
use	= true
use_wpn	= false

[death]
on_info = %+agr_hourman_dead%