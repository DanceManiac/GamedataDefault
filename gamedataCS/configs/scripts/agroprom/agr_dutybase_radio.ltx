[logic]
active = ph_idle@wait

[ph_idle@wait]
hit_on_bone = 0 | nil
on_info = {+agr_dutybase_radio_off} ph_idle@off
on_info2 = {=actor_in_zone(agr_in_restr_barman)} ph_idle@play %=play_sound(agr_dutybase_radio_sound)%

[ph_idle@play]
hit_on_bone = 0 | nil %=stop_sound +agr_dutybase_radio_off%
on_info = {!actor_in_zone(agr_in_restr_barman)} ph_idle@wait %=stop_sound%
on_info2 = {!is_playing_sound} ph_idle@wait
tips = radio_off
on_use = ph_idle@off %+agr_dutybase_radio_off =stop_sound%

[ph_idle@off]
hit_on_bone = 0 | nil
tips = radio_on
on_use = ph_idle@play %-agr_dutybase_radio_off =play_sound(agr_dutybase_radio_sound)%