[logic]
active = sr_idle@line_0

[sr_idle@line_0]
on_info = {+agr_smart_terrain_2_3_simulation_task =smart_captured_by_faction(agr_smart_terrain_2_3:bandit_enemy)} sr_idle@line_1 %=give_inited_task(eliminate_smart:agr_smart_terrain_2_3:stalker)%

