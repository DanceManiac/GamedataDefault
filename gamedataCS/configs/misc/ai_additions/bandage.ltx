[main]
medkit_health = 75		; использовать аптечку если здоровье меньше, %
bandage_bleeding = 0.07		; использовать бинт, если кровотечение больше

spawn_medkits_time = 70		; сек; время спавна аптечек, 0 - отключить спавн
spawn_bandages_time = 20	; сек; время спавна бинтов, 0 - отключить спавн

forbidden_factions = zombied	; группировки, для которых схема будет отключена (community)

[forbidden_npcs];имена, профили НПС, для которых схема будет отключена (name,profile_name)
prisoner_guard_stalker

[medkits]; аптечки или то чем можно лечиться
medkit
medkit_army
medkit_scientic
yadulin

[bandages]; список бинтов, предметы, останавливающие кровотечение
bandage

[animation]; анимация, используемая для предмета (medkit,bandage,pills,drink)
medkit = medkit
medkit_army = medkit
medkit_scientic = medkit
bandage = bandage
yadulin = drink


